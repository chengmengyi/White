<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f9ff">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/main_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_set"
        app:layout_constraintBottom_toBottomOf="@id/iv_set"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_set"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/icon_home_set"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/view_center_bg"
        android:layout_width="101dp"
        android:layout_height="272dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/bg_d0cce0_50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_set"/>
    <RelativeLayout
        android:id="@+id/iv_center_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_set">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="238dp"
            android:layout_height="238dp"
            android:src="@drawable/home_center_img" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_connect_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="#383A42"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_center_connect_btn"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/icon_home_center_connect_btn"
        app:layout_constraintTop_toTopOf="@id/iv_center_view"
        app:layout_constraintLeft_toLeftOf="@id/iv_center_view"
        app:layout_constraintRight_toRightOf="@id/iv_center_view"
        app:layout_constraintBottom_toBottomOf="@id/iv_center_view"
        />
    <View
        android:id="@+id/view_choose_server"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_ffffff_12dp"
        app:layout_constraintTop_toBottomOf="@id/view_center_bg"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_server_flag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/icon_fast"
        app:layout_constraintTop_toTopOf="@id/view_choose_server"
        app:layout_constraintLeft_toLeftOf="@id/view_choose_server"
        app:layout_constraintBottom_toBottomOf="@id/view_choose_server"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_server_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="13sp"
        android:singleLine="true"
        android:text="Faster server"
        android:textColor="#000208"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toLeftOf="@id/view_right"
        app:layout_constraintLeft_toRightOf="@id/iv_server_flag"
        app:layout_constraintTop_toTopOf="@id/view_choose_server"
        app:layout_constraintBottom_toBottomOf="@id/view_choose_server"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/icon_right"
        app:layout_constraintTop_toTopOf="@id/view_choose_server"
        app:layout_constraintRight_toRightOf="@id/view_choose_server"
        app:layout_constraintBottom_toBottomOf="@id/view_choose_server"/>
    <include layout="@layout/layout_home_ad"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>